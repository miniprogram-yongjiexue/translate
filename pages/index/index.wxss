#clear{ float: right; margin: 14rpx -2rpx 0 0;}
.table{    position: relative;
    overflow: hidden;
    z-index: 0;
    background: #FDFDFC;
    width: 700rpx;
    margin: 20rpx auto;}
.table:before {
    content: '';
    position: absolute;
    width: 25%;
    left: 25%;
    height: 100%;
    border-left: 1rpx solid #ddd8ce;
    border-right: 1rpx solid #ddd8ce;
}
.table:after {
    content: '';
    position: absolute;
    width: 10%;
    left: 75%;
    height: 100%;
    border-left: 1rpx solid #ddd8ce;
    border-right: none;
}
.table .tableli{
    display: inline-block;
    width: 25%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    text-align: center;
    border-bottom: 1rpx solid #ddd8ce;
    margin-bottom: 0rpx;
    float: left;
    position: relative;
    z-index: 10;
}
.tableli .tablea {
    display: block;
    color: inherit;
    height: 100%;
    overflow-x: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.tableli .tablea.on{ color:#fff; font-weight:bold; background:#1aac19;}
